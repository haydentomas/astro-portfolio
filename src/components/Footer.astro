<style>
  footer li {
    a,
    a:link,
    a:visited {
      text-decoration: none;
      position: relative;
      padding-bottom: 6px;
    }

    a::before {
      content: "";
      position: absolute;
      width: 100%;
      top: 0;
      bottom: 0;
      background-image: linear-gradient(90deg, #16bdca, #0b8992);
      background-size: 0 4px;
      background-repeat: no-repeat;
      background-position: right bottom;
      transition: background-size 0.3s ease-in;
      border-radius: 10px;
    }

    a:hover::before {
      background-size: 100% 4px;
    }
  }

  ul.theicons {
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: 45px 45px 45px;
  }

  .footericons ul li {
    list-style: none;
    margin: 0px;
  }

  .footericons ul li a {
    position: relative;
    display: block;
    width: 35px;
    height: 35px;
    text-align: center;
    line-height: 35px;
    background: #333;
    border-radius: 50%;
    font-size: 20px;
    color: #dadada;
    transition: 0.5s;
  }

  .footericons ul li a::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: #16bdca;
    transition: 0.5s;
    transform: scale(0.9);
    z-index: -1;
  }

  .footericons ul li a:hover::before {
    transform: scale(1.1);
    box-shadow: 0 0 15px #16bdca;
  }

  .footericons ul li a:hover {
    @apply text-white;
    background-color: #16bdca;
    /* box-shadow: 0 0 5px  #16bdca;
  text-shadow: 0 0 5px #16bdca; */
  }


  .footericons svg{
position: absolute;
top:5px;
left:6px
  }


</style>
